<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.grutor">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <queries>

        <!-- Camera -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:name=".Parse.ParseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Grutor"
        tools:targetApi="31">
        <activity
            android:name=".Activites.OnboardingActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.MatchingActivity"
            android:exported="false"
            android:label="@string/title_activity_matching"
            android:theme="@style/Theme.Grutor.NoActionBar" />
        <activity
            android:name=".Activites.LessonActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Activites.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".Activites.FeedActivity"
            android:exported="true" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.codepath.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />
        </provider>
    </application>

</manifest>