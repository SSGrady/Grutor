<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activites.MatchingActivity">

    <ImageView
        android:id="@+id/ivMatchedStudent"
        android:layout_width="62dp"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_icon" />

    <TextView
        android:id="@+id/tvMatchedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/ivMatchedStudent"
        app:layout_constraintTop_toTopOf="@+id/ivMatchedStudent"
        tools:text="So-and-so" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAccept"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_shape_btn"
        android:text="Accept"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivMatchedStudent"
        app:layout_constraintTop_toBottomOf="@+id/tvMatchedName"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelete"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/round_shape_btn"
        android:backgroundTint="#CDFBF9F9"
        android:text="Delete"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/btnAccept"
        app:layout_constraintTop_toTopOf="@+id/btnAccept"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>